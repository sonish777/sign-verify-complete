extends base

block content

    form.w-50.m-auto.border.rounded.p-3(action='/add' method='POST' enctype='multipart/form-data')
        p.lead Add a new user
        .mb-3
            label.form-label(for='name') Name
            input#name.form-control(type='text' name="name")
        .mb-3
            label.form-label(for='formFileMultiple') Upload 15 images 
            input#formFileMultiple.form-control(type='file' multiple='' name="images")
        .mb-3.form-check
            input#exampleCheck1.form-check-input(type='checkbox' name="augment")
            label.form-check-label(for='exampleCheck1') Augment Images
        button.btn.btn-primary(type='submit') Submit

